<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inventory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Si se utliza el android:src para aplicar un color se usa el ColorSecondary -->
        <!-- Si se utliza el android:srcCompat se debe usar el atributo tint dentro del fab y asi modificarlo -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.  Permite que el componente Navigation Drawer se vea en la barra de estadp ya que es transparente-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds" >true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Inventory.NoActionBar" parent="Theme.Inventory">
        <!-- Primary brand color. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Inventory.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Inventory.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Inventory.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>